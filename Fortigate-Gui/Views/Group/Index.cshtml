@model IEnumerable<Fortigate_Gui.Models.Group>

@{
    ViewData["Title"] = "Groups";
}

<div class="row">
    <div class="col-4">
        <p>
            <a onclick="showInPopup('@Url.Action("AddOrEdit","Group",null,Context.Request.Scheme)','Add Group')" class="btn btn-outline-danger">New Group</a>
        </p>
    </div>
    <div class="col-8">
        <h1><i class="fas fa-users"></i> Groups</h1>
    </div>
</div>

<div id="view-all">
    @await Html.PartialAsync("_ViewAll", Model)
</div>