@model Fortigate_Gui.ViewModels.AddOrEditGroupViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="row">
    <div class="col">
        <form asp-action="AddOrEdit" asp-route-id="@Model.Group.GroupID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Group.GroupID" />
            <div class="form-group">
                <label asp-for="Group.Name" class="control-label"></label>
                <input asp-for="Group.Name" class="form-control" />
                <span asp-validation-for="Group.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="SelectedFortiUsers" asp-items="Model.FortiUserList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-outline-danger btn-block" />
            </div>
        </form>
    </div>
</div>

