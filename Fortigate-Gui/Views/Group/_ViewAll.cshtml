@model IEnumerable<Fortigate_Gui.Models.Group>

<table class="table" id="datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.configFile)
            </th>*@
            <th class="text-right">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.configFile.ConfigfileID)
                </td>*@
            <td class="text-right">
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "Group", new { id = item.GroupID}, Context.Request.Scheme)', 'Edit Group')" class="btn btn-primary my-1 text-white"><i class="far fa-edit"></i></a>
                    <form asp-action="Delete" asp-route-id="@item.GroupID" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                    <button type="submit" class="btn btn-primary my-1"><i class="fas fa-trash" aria-hidden="true"></i></button>
                    </form>
                <a asp-controller="Home" asp-action="AddGroup" class="btn btn-primary my-1" asp-route-id="@item.GroupID"><i class="far fa-plus-square"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
