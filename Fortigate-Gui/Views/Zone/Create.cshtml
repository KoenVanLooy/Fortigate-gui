@model Fortigate_Gui.ViewModels.CreateZoneViewModel

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<form asp-action="Create" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Zone.Name" class="control-label"></label>
        <input asp-for="Zone.Name" class="form-control" />
        <span asp-validation-for="Zone.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select class="custom-select" multiple asp-for="SelectedInterface" asp-items="Model.InterfaceList"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
