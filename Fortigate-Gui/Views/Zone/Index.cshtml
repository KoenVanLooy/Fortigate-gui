@model IEnumerable<Fortigate_Gui.Models.Zone>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center"><i class="fas fa-code"></i> Zone</h1>

<p>
    <a onclick="showInPopup('@Url.Action("Create","Zone",null,Context.Request.Scheme)','Create Zone')" class="btn btn-primary">Create New</a>
</p>
<table class="table" onload="myFunction()">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("Edit","Zone",new { id = item.ZoneID },Context.Request.Scheme)','Edit Zone')" class="btn btn-success">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                        Edit
                    </a>
                    <form asp-action="Delete" asp-route-id="@item.ZoneID" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash" aria-hidden="true"></i></button>
                    </form>
                    <div>
                        <a asp-controller="Home" asp-action="AddZone" asp-route-id="@item.ZoneID" class="btn btn-primary">Add conffile</a>
                    </div>

                </td>
            </tr>
        }

    </tbody>
    
</table>
<div  id="div_hide" style="display:block;">
    <a asp-controller="Home" asp-action="AddZone" asp-route-id="2" class="btn btn-primary">Add conffile</a>
</div>

<script>
    window.onload = function () {
        if (@Model.Count() < 10) {
            var x = document.getElementById("div_hide");
            x.style.display = "none";
        }
        
    };
</script>
