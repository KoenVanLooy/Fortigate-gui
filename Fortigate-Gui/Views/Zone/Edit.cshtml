@model Fortigate_Gui.ViewModels.EditZoneViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<form asp-action="Edit" asp-route-id="@Model.Zone.ZoneID" onsubmit="return jQueryAjaxPost(this);">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Zone.ZoneID" />
    <div class="form-group">
        <label asp-for="Zone.Name" class="control-label"></label>
        <input asp-for="Zone.Name" class="form-control" />
        <span asp-validation-for="Zone.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select class="custom-select" multiple asp-for="SelectedInterface" asp-items="Model.InterfaceList"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-danger col col-12" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
