@model IEnumerable<Fortigate_Gui.Models.FirewallAddress>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subnet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subnet)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FirewallAddressID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FirewallAddressID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FirewallAddressID">Delete</a>
                <a asp-controller="Home" asp-action="AddFirewallAddress" asp-route-id="@item.FirewallAddressID" class="btn btn-primary">Add conffile</a>
            </td>
        </tr>
}
    </tbody>
</table>
