@model Fortigate_Gui.ViewModels.EditFWViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<form asp-action="Edit" asp-route-id="@Model.FirewallAddress.FirewallAddressID" onsubmit="return jQueryAjaxPost(this);">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="FirewallAddress.FirewallAddressID" />
    <div class="form-group">
        <label asp-for="FirewallAddress.Name" class="control-label"></label>
        <input asp-for="FirewallAddress.Name" class="form-control" />
        <span asp-validation-for="FirewallAddress.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirewallAddress.Subnet" class="control-label"></label>
        <input asp-for="FirewallAddress.Subnet" class="form-control" />
        <span asp-validation-for="FirewallAddress.Subnet" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select class="custom-select" asp-for="FirewallAddress.AssociatedZone" asp-items="Model.Zones"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>


