@model Fortigate_Gui.ViewModels.AddOrEditUserViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="row">
    <div class="col">
        <form asp-action="AddOrEdit" asp-route-id="@Model.FortiUser.FortiUserID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FortiUser.FortiUserID" />
            <div class="form-group">
                <label asp-for="FortiUser.Name" class="control-label"></label>
                <input asp-for="FortiUser.Name" class="form-control" />
                <span asp-validation-for="FortiUser.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FortiUser.Password" class="control-label"></label>
                <input asp-for="FortiUser.Password" class="form-control" />
                <span asp-validation-for="FortiUser.Password" class="text-danger"></span>
            </div>
            <div>
                <select asp-for="SelectedGroups" asp-items="Model.GroupList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-outline-primary btn-block" />
            </div>
        </form>
    </div>
</div>

